{
	"name": "PLAYA",
	"version": "0.0.1",
	"description": "be a playa",
	"main": "index.js",
	"scripts": {
		"mocha": "mocha './test/**/*spec.js'",
		"test": "npm run lint && npm run mocha && npm run check:comments",
		"test:watch": "npm run mocha -- --watch",
		"test:coverage": "nyc --reporter=html --reporter=text-summary npm test",
		"check:comments": "leasot -x lib/**/*.js",
		"lint": "eslint lib src test",
		"build": "rm -rf ./dist && webpack --mode production",
		"start": "webpack-dev-server --open --mode development"
	},
	"author": "Ricardo Matias<ricardo.matias0@gmail.com>",
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/preset-env": "^7.1.0",
		"babel-loader": "^8.0.4",
		"chai": "^4.2.0",
		"eslint": "^5.6.1",
		"eslint-config-google": "^0.10.0",
		"eslint-plugin-import": "^2.14.0",
		"husky": "^1.1.1",
		"leasot": "^7.0.0-rc.5",
		"mocha": "^5.2.0",
		"nyc": "^13.0.1",
		"webpack": "^4.21.0",
		"webpack-bundle-analyzer": "^3.0.3",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.9"
	},
	"dependencies": {
		"alea": "^1.0.0",
		"clean-webpack-plugin": "^0.1.19",
