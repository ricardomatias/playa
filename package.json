	"description": "be a playa",
	"main": "build/playa.js",
	"module": "index.js",
	"scripts": {
		"mocha": "mocha './test/**/*spec.js'",
		"test": "npm run lint && npm run mocha && npm run check:comments",
		"test:watch": "npm run mocha -- --watch",
		"test:coverage": "nyc --reporter=html --reporter=text-summary npm test",
		"check:comments": "leasot -x lib/**/*.js",
		"lint": "eslint lib test",
		"build": "rm -rf ./build && rollup -c rollup.config.js",
		"start": "webpack-dev-server --config webpack.config.dev.js --open",
		"prepare": "npm run build"
	},
	"author": "Ricardo Matias<ricardo.matias0@gmail.com>",
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	},
	"files": [
		"build"
	],
	"devDependencies": {
		"@babel/core": "^7.1.6",
		"@babel/preset-env": "^7.1.6",
		"babel-loader": "^8.0.4",
		"chai": "^4.2.0",
		"eslint": "^5.9.0",
		"eslint-config-google": "^0.10.0",
		"eslint-plugin-import": "^2.14.0",
		"husky": "^1.2.0",
		"leasot": "^7.0.0-rc.5",
		"mocha": "^5.2.0",
		"nyc": "^13.0.1",
		"rollup-plugin-babel": "^4.0.3",
